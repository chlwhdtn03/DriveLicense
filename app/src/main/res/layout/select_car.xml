<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="3dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/font"
                android:id="@+id/select_car_title"
                android:text="운전하려는 차를 선택하세요  "/>

            <LinearLayout
                android:id="@+id/select_car_up"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/select_car_Car"
                    android:layout_width="0dp"
                    android:layout_height="185dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/car"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font"
                        android:textSize="15sp"
                        android:text="승용차, 승합차"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_car_Bus"
                    android:layout_width="0dp"
                    android:layout_height="185dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="20dp"
                        android:src="@drawable/bus"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font"
                        android:textSize="15sp"
                        android:text="버스"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/select_car_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
                android:gravity="center"
            android:layout_weight="1"
            android:weightSum="2">

                <LinearLayout
                android:id="@+id/select_car_Truck"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_weight="1"
                android:orientation="vertical">




                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    android:src="@drawable/truck"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:text="트럭"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_car_Motor"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    android:src="@drawable/motorcycle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:text="오토바이"/>
        </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>