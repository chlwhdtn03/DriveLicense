<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#0253FF"
        android:layout_marginBottom="20dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/score_gradient">

            <TextView
                android:id="@+id/result_score"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/font"
                android:text="82 점"
                android:textSize="50sp"
                android:textColor="#FFFFFF"></TextView>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-15dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/result_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:gravity="center"
                android:text="합격을 예상합니다!"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"/>


            <TextView
                android:id="@+id/result_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:gravity="center"
                android:text="40문제 중 40문제 정답"/>


            <TextView
                android:id="@+id/result_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:gravity="right"
                android:text="포인트 20 획득!"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/result_grid"
                android:columnCount="4"
                android:padding="20dp"
                android:rowCount="10">

<!--                <CheckBox-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:button="@drawable/scoring"-->
<!--                    android:fontFamily="@font/font"-->
<!--                    android:layout_gravity="fill"-->
<!--                    android:text="1번 문제"-->
<!--                    android:paddingRight="10dp"-->
<!--                    android:textSize="15sp" />-->
<!--                -->
<!--                -->



            </GridLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>